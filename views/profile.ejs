<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Your Profile</h1>
        
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span>User's Name</h3>

                <% if (user.local.email) { %>
                    <p>
                        <!-- <strong>id</strong>: <%= user._id %><br> -->
                        <strong>email</strong>: <%= user.local.email %><br>
                        <!-- <strong>password</strong>: <%= user.local.password %> -->
                    </p>

                    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
                <% } %>

            </div>
        </div>
      <section class="profileBillAlert">
        <h1>Your next Bill!</h1>
        <% for(let i = 0; i < results.length; i++){ %>
          <!-- include to sort the bills by date due and only show next upcomming bill here-->
          <h2>Dont forget to pay <%= results[i].company.toUpperCase() %> , $<%= results[i].due %> by this date <%= results[i].date %></h2>
        
        <% } %>
      </section>
